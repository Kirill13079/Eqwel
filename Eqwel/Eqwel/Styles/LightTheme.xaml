<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Eqwel.Styles.LightTheme">

    <Color x:Key="PrimaryColor">#FCFCFC</Color>
    <Color x:Key="SecondaryColor">#040615</Color>
    <Color x:Key="TertiaryColor">#E5E5E5</Color>
    <Color x:Key="AccentColor">#84F73E</Color>
    <Color x:Key="ComponentColor"> White </Color>
    <Color x:Key="PageBackgroundColor">#efefef</Color>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="#efefef"/>
        <Setter Property="BarTextColor" Value="#040615"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="#040615"/>
    </Style>
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/Global.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>